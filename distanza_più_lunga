#include<iostream>
#include<cstdlib>
#include<ctime>
#include<cstring>
#include<cmath>

using namespace std ;
/*Scrivere una funzione che prende in input un 
array di interi e ritorna la distanza massima tra due interi memorizzati 
nellâ€™array (la distanza tra due interi `e la loro differenza in valore assoluto).
*/
int dif_abs(int n, int m){
	if((n-m)<0) return (m-n) ;
	else return (n-m) ;
}
int distanza_max(int a[], int l){
	int max=0 ;
	for(int i=0; i<l-1; i++){
		int j=i+1 ;
		while(j<l){
			if(dif_abs(a[i],a[j])>max) max = dif_abs(a[i],a[j]) ;
			j++ ;
		}
	}
	return max ;
}
int main() {
	srand(time(0)) ;
	int l=10 ;
	int a[l] ;
	for(int i=0; i<l; i++) {
		a[i]=rand()%100 ;
		cout<< a[i]<<"\t" ;
	}
	cout<< "\n"<< distanza_max(a,l) ;
	return 0 ;
}
