#include<iostream>
#include<cstdlib>
#include<ctime>
#include<cstring>
#include<cmath>

using namespace std ;
//Scrivere una funzione che verifica se una stringa Ã¨
//composta da sole lettere maiuscole
bool is_maiuscolo(char a[]) {
	int l=strlen(a) ;
	for(int i=0; i<l; i++) {
		if((a[i]<65)||(a[i]>90)){
			return (false) ;
		}
	}
	return (true) ;
}
